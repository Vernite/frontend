{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "workflow": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "i18n": {
        "sourceLocale": "en-US",
        "locales": {
          "pl-PL": {
            "translation": "src/locales/messages.pl-PL.xlf"
          },
          "en-GB": {
            "translation": "src/locales/messages.en-GB.xlf"
          },
          "de-DE": {
            "translation": "src/locales/messages.de-DE.xlf"
          },
          "it-IT": {
            "translation": "src/locales/messages.it-IT.xlf"
          },
          "es-ES": {
            "translation": "src/locales/messages.es-ES.xlf"
          },
          "uk-UA": {
            "translation": "src/locales/messages.uk-UA.xlf"
          }
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-builders/custom-webpack:browser",
          "options": {
            "outputPath": "dist/workflow",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": ["src/favicon.ico", "src/assets"],
            "styles": [
              "./node_modules/@angular/material/prebuilt-themes/deeppurple-amber.css",
              "src/styles/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "2mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all",
              "localize": true
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            },
            "e2e": {
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true,
              "vendorChunk": true,
              "customWebpackConfig": {
                "path": "./cypress/coverage.webpack.ts"
              }
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "ngx-build-plus:dev-server",
          "options": {
            "proxyConfig": "proxy.conf.json",
            "extraWebpackConfig": "./cypress/coverage.webpack.js"
          },
          "configurations": {
            "production": {
              "browserTarget": "workflow:build:production"
            },
            "development": {
              "browserTarget": "workflow:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "serve-coverage": {
          "builder": "@angular-builders/custom-webpack:dev-server",
          "options": {
            "proxyConfig": "proxy.conf.json",
            "browserTarget": "workflow:build:e2e"
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "workflow:build"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["src/**/*.ts", "src/**/*.html"]
          }
        },
        "e2e": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "devServerTarget": "workflow:serve-coverage",
            "configFile": "cypress.e2e.config.ts",
            "watch": true,
            "headless": false
          },
          "configurations": {
            "production": {
              "devServerTarget": "workflow:serve-coverage:production"
            }
          }
        },
        "e2e-ci": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "browser": "chrome",
            "devServerTarget": "workflow:serve-coverage",
            "configFile": "cypress.e2e.config.ts",
            "headless": true,
            "watch": false
          },
          "configurations": {
            "production": {
              "devServerTarget": "workflow:serve-coverage:production"
            }
          }
        },
        "unit": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "devServerTarget": "workflow:serve-coverage",
            "configFile": "cypress.unit.config.ts",
            "watch": true,
            "headless": false
          },
          "configurations": {
            "production": {
              "devServerTarget": "workflow:serve-coverage:production"
            }
          }
        },
        "all": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "devServerTarget": "workflow:serve-coverage",
            "configFile": "cypress.all.config.ts",
            "watch": true,
            "headless": false
          },
          "configurations": {
            "production": {
              "devServerTarget": "workflow:serve-coverage:production"
            }
          }
        },
        "all-ci": {
          "builder": "@cypress/schematic:cypress",
          "options": {
            "browser": "chrome",
            "devServerTarget": "workflow:serve-coverage",
            "configFile": "cypress.all.config.ts",
            "headless": true,
            "watch": false
          },
          "configurations": {
            "production": {
              "devServerTarget": "workflow:serve-coverage:production"
            }
          }
        }
      }
    }
  },
  "defaultProject": "workflow",
  "cli": {
    "defaultCollection": "@angular-eslint/schematics"
  }
}
